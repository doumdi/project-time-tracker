{
  "name": "project-time-tracker",
  "version": "1.0.15",
  "description": "Simple time tracking per project",
  "main": "src/main.js",
  "homepage": "./",
  "scripts": {
    "start": "webpack serve --mode development",
    "build": "webpack --mode production",
    "build:web": "webpack --config webpack.web.config.js",
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=1 electron .",
    "electron-demo": "electron . --demo_mode",
    "update-version": "node scripts/update-version.js",
    "predist": "npm run update-version",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "dev": "concurrently \"npm start\" \"wait-on http://localhost:8080 && npm run electron-dev\"",
    "populate-dev-data": "node scripts/populate-dev-data.js",
    "populate-dev-data-clear": "node scripts/populate-dev-data.js --clear",
    "postinstall": "node scripts/postinstall.js",
    "test": "npm run test:unit && npm run test:integration && npm run test:mcp",
    "test:unit": "mocha 'tests/unit/**/*.test.js' --timeout 10000",
    "test:integration": "node tests/comprehensive-timer-tests.js",
    "test:timer": "node tests/timer-tests.js",
    "test:sync": "node tests/timer-sync-tests.js",
    "test:mcp": "node tests/test-http-mcp-server.js",
    "test:demo": "node tests/test-demo-mode.js"
  },
  "build": {
    "appId": "com.doumdi.project-time-tracker",
    "productName": "Project Time Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "dist/**/*",
      "node_modules/**/*"
    ],
    "artifactName": "${productName}-${version}.${ext}",
    "mac": {
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "win": {
      "target": "nsis",
      "artifactName": "${productName} Setup ${version}.${ext}"
    },
    "linux": {
      "target": "AppImage",
      "artifactName": "${productName}-${version}.${ext}"
    }
  },
  "keywords": [
    "time-tracking",
    "productivity",
    "electron"
  ],
  "author": "Dominic LÃ©tourneau",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@stoprocent/noble": "^2.3.4",
    "chart.js": "^4.5.0",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "react": "^19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.0",
    "sql.js": "^1.13.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@babel/core": "^7.27.7",
    "@babel/preset-react": "^7.27.1",
    "babel-loader": "^10.0.0",
    "chai": "^6.0.1",
    "concurrently": "^9.2.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.4",
    "mocha": "^11.7.1",
    "style-loader": "^4.0.0",
    "wait-on": "^8.0.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
